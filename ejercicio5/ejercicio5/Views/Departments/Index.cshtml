@model List<Entities.DEPARTMENTS>
@{
    ViewBag.Title = "Departments";
}
<section class="page-title-alt bg-primary position-relative">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="text-white font-tertiary">Departments</h1>
            </div>
        </div>
    </div>
    <!-- background shapes -->
    <img src="@Url.Content("~/Content/images/illustrations/leaf-bg-top.png")" alt="illustrations" class="bg-shape-1 w-100">
    <img src="@Url.Content("~/Content/images/illustrations/dots-group-sm.png")" alt="illustration" class="bg-shape-2">
    <img src="@Url.Content("~/Content/images/illustrations/leaf-yellow.png")" alt="illustrations" class="bg-shape-3">
    <img src="@Url.Content("~/Content/images/illustrations/leaf-orange.png")" alt="illustrations" class="bg-shape-4">
    <img src="@Url.Content("~/Content/images/illustrations/dots-group-cyan.png")" alt="illustrations" class="bg-shape-5">
    <img src="@Url.Content("~/Content/images/illustrations/leaf-cyan-lg.png")" alt="illustrations" class="bg-shape-6">
</section>
<br>
<br>
@if (ViewBag.Message != null)
{
    <div id="Message">
        @ViewBag.Message
    </div>
}
<br>
<br>
<div style="margin:3px;">
    @Html.ActionLink("Insert", "Insert", "Departments", new { @class = "btn btn-sm btn-primary" })
</div>
<br>
<table class="table">
    <tr>
        <td>ID</td>
        <td>Department name</td>
        <td>Department description</td>
        <td>Location ID</td>
        <td>Actions</td>
    </tr>
    @foreach (var department in Model)
    {
        <tr>
            <td>@department.ID</td>
            <td>@department.DEPARTMENT_NAME</td>
            <td>@department.DEPARTMENT_DESCRIPTION</td>
            <td>@department.LOCATION_ID</td>
            <td>@Html.ActionLink("Delete", "Delete", new { id = department.ID }, new { onclick = "return confirm('Are you sure you want to delete this department?')", @class = "btn btn-sm btn-primary" })</td>
            <td>@Html.ActionLink("Update", "Update", new { id = department.ID }, new { @class = "btn btn-sm btn-primary" })</td>
        </tr>
    }
</table>

