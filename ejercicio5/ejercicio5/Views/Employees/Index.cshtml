@model List<Entities.EMPLOYEES>
<section class="page-title-alt bg-primary position-relative">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="text-white font-tertiary">Employees</h1>
            </div>
        </div>
    </div>
    <!-- background shapes -->
    <img src="@Url.Content("~/Content/images/illustrations/leaf-bg-top.png")" alt="illustrations" class="bg-shape-1 w-100">
    <img src="@Url.Content("~/Content/images/illustrations/dots-group-sm.png")" alt="illustration" class="bg-shape-2">
    <img src="@Url.Content("~/Content/images/illustrations/leaf-yellow.png")" alt="illustrations" class="bg-shape-3">
    <img src="@Url.Content("~/Content/images/illustrations/leaf-orange.png")" alt="illustrations" class="bg-shape-4">
    <img src="@Url.Content("~/Content/images/illustrations/dots-group-cyan.png")" alt="illustrations" class="bg-shape-5">
    <img src="@Url.Content("~/Content/images/illustrations/leaf-cyan-lg.png")" alt="illustrations" class="bg-shape-6">
</section>
<br>
<br>
@if (ViewBag.Message != null)
{
    <div id="Message">
        @ViewBag.Message
    </div>
}
<br>

<table class="table">
    <tr>
        <td>ID</td>
        <td>First name</td>
        <td>Last name</td>
        <td>Job ID</td>
        <td>Manager ID</td>
        <td>Salary</td>
        <td>Department ID</td>
        <td>Hire date</td>
        <td>Actions</td>
    </tr>
    @foreach (var employee in Model)
    {
<tr>
    <td>@employee.ID</td>
    <td>@employee.FIRST_NAME</td>
    <td>@employee.LAST_NAME</td>
    <td>@employee.JOB_ID</td>
    <td>@employee.MANAGER_ID</td>
    <td>@employee.SALARY</td>
    <td>@employee.DEPARTMENT_ID</td>
    <td>@employee.HIRE_DATE</td>
    <td>@Html.ActionLink("Delete", "Delete", new { id = employee.ID }, new { onclick = "return confirm('Are you sure you want to delete this employee?')" })</td>
    <td>@Html.ActionLink("Update", "Update", new { id = employee.ID }, "Employees")</td>
</tr>
    }
</table>
<div>
    @Html.ActionLink("Insert", "Insert", "Employees")
</div>
