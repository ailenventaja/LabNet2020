@model Entities.EMPLOYEES
<section class="page-title-alt bg-primary position-relative">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="text-white font-tertiary">Insert Employee</h1>
            </div>
        </div>
    </div>
    <!-- background shapes -->
    <img src="@Url.Content("~/Content/images/illustrations/leaf-bg-top.png")" alt="illustrations" class="bg-shape-1 w-100">
    <img src="@Url.Content("~/Content/images/illustrations/dots-group-sm.png")" alt="illustration" class="bg-shape-2">
    <img src="@Url.Content("~/Content/images/illustrations/leaf-yellow.png")" alt="illustrations" class="bg-shape-3">
    <img src="@Url.Content("~/Content/images/illustrations/leaf-orange.png")" alt="illustrations" class="bg-shape-4">
    <img src="@Url.Content("~/Content/images/illustrations/dots-group-cyan.png")" alt="illustrations" class="bg-shape-5">
    <img src="@Url.Content("~/Content/images/illustrations/leaf-cyan-lg.png")" alt="illustrations" class="bg-shape-6">
</section>
<br>
<br>
@using (Html.BeginForm("Update", "Employees", "id", FormMethod.Post))
{

    <div>First name: @Html.TextBoxFor(r => r.FIRST_NAME)</div>
    <div>Last name: @Html.TextBoxFor(r => r.LAST_NAME)</div>
    <div>Hire date: @Html.TextBoxFor(r => r.HIRE_DATE, "{0:dd-MM-yyyy HH:mm:ss}", new { type = "date", required = "required" })</div>
    <div>
        Job ID:
        <select @Html.TextBoxFor(r => r.JOB_ID)>
            <option> </option>
            <option value="FQ_GRT">FQ_GRT</option>
            <option value="FQ_SPV">FQ_SPV</option>
            <option value="FQ_OPR">FQ_OPR</option>
            <option value="AD_CTB">AD_CTB</option>
            <option value="AD_PBC">AD_PBC</option>
        </select>
    </div>
    <div>
        Department ID:
        <select @Html.TextBoxFor(r => r.DEPARTMENT_ID)>
            <option> </option>
            <option value="10">10</option>
            <option value="20">20</option>
            <option value="30">30</option>
            <option value="31">31</option>
            <option value="40">40</option>
            <option value="50">50</option>
        </select>
    </div>
    <div>Manager ID: @Html.TextBoxFor(r => r.MANAGER_ID)</div>
    <div>Salary: @Html.TextBoxFor(r => r.SALARY)</div>
    <input style="margin:3px;" class="btn btn-sm btn-primary" type="submit" name="Save" value="Save" />
}


